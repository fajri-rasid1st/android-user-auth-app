<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_main_background"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="26dp"
        android:paddingVertical="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="@string/welcome_onboard"
            android:textColor="@color/secondary_text"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="22dp"
            android:fontFamily="@font/nunito_sans_semibold"
            android:text="@string/let_s_make_one_for_you"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilFullname"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="@string/fullname"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:helperTextTextColor="#F40F0F">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_person_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="text"
                android:maxLength="50"
                android:textColor="@color/secondary_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="@string/email_address"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:helperTextTextColor="#F40F0F">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_email_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="textEmailAddress"
                android:textColor="@color/secondary_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="@string/password"
            app:endIconMode="password_toggle"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:helperTextTextColor="#F40F0F">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="textPassword"
                android:textColor="@color/secondary_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilRepeatPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:hint="@string/repeat_password"
            app:endIconMode="password_toggle"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:helperTextTextColor="#F40F0F">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_lock_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="textPassword"
                android:textColor="@color/secondary_text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPhone"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="@string/phone_number"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"
            app:helperTextTextColor="#F40F0F">

            <com.santalu.maskara.widget.MaskEditText
                android:id="@+id/metPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_local_phone_icon"
                android:drawablePadding="8dp"
                android:fontFamily="@font/nunito_sans_semibold"
                android:inputType="number"
                android:maxLength="20"
                android:textColor="@color/secondary_text"
                app:mask="+62 (___) ___ __ ___"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/primary_color"
            android:elevation="4dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="@string/register"
            android:textAllCaps="false" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center"
                android:text="@string/already_have_an_account"
                android:textColor="@color/secondary_text"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sign_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_semibold"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/dark_color"
                android:textSize="16sp" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginTop="-334dp"
            android:visibility="invisible" />

    </LinearLayout>

</ScrollView>
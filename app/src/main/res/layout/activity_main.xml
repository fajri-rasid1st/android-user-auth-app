<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_splash_screen"
    tools:context=".MainActivity">

    <RelativeLayout
        android:paddingHorizontal="26dp"
        android:paddingVertical="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/user_auth"
            android:textColor="@color/text_and_icons"
            android:textSize="42sp" />

        <TextView
            android:id="@+id/sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_title"
            android:fontFamily="@font/nunito_sans"
            android:text="@string/lorem"
            android:textColor="@color/text_and_icons"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/sub_title"
            android:layout_marginTop="426dp"
            android:backgroundTint="@color/text_and_icons"
            android:fontFamily="@font/nunito_sans_bold"
            android:paddingVertical="12dp"
            android:text="@string/get_started"
            android:textAllCaps="false"
            android:elevation="4dp"
            android:textColor="@color/primary_text"
            android:textSize="18sp" />

    </RelativeLayout>

</ScrollView>